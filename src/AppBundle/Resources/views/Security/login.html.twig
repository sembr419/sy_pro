    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
        <div class="limiter">
            <div class="container-login100"
                 style="background-image: url('../../../../../web/bootstrap-3.3.7-dist/images/bg-01.jpg');">
                <div class="wrap-login100">
                    <form class="login100-form validate-form">
					<span class="login100-form-logo">
						<i class="zmdi zmdi-landscape"></i>
					</span>

                        <span class="login100-form-title p-b-34 p-t-27">
						Нэвтрэх хэсэг
					</span>

                        {% if error %}
                                <div style="color: red;text-align: center">{{ error|trans({}, 'FOSUserBundle') }}</div>
                        {% endif %}
                        <div class="wrap-input100 validate-input" data-validate="Enter username">
                            <input class="input100" type="text" name="_username" placeholder="Нэвтрэх нэр">
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Enter password">
                            <input class="input100" type="password" name="_password" placeholder="Нууц үг">
                            <span class="focus-input100" data-placeholder="&#xf191;"></span>
                        </div>

                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Намайг сана
                            </label>
                        </div>

                        <div class="container-login100-form-btn">
                            <button href="{{ path('mainpage') }}" class="login100-form-btn" >

                                Нэвтрэх
                            </button>
                        </div>
                        <div class="text-center p-t-90">
                            <a href="{{ path('forgetPage') }}" methods="post" class="txt1" >
                                Нууц үгээ мартсан уу?
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>


